<div class="basic-grey">
  <script type="text/javascript">
    $.notify("<%= notice %>", "success")

  </script>


  <h1>Listando os Tipos</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Tipo', new_kind_path, class: "btn btn-primary" %>
  <%= link_to('Voltar', root_path, class: "btn btn-success")%>
</div>
